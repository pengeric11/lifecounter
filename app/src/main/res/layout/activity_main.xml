<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="2dp"
                app:columnCount="2"
                app:rowCount="4">

                <TextView
                    android:id="@+id/tv_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player 1"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/p1_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p1_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p1_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/p1_b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–5"
                    app:layout_column="1"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/p1_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 20"
                    android:textSize="18sp"
                    app:layout_row="3" />
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:padding="2dp"
                app:columnCount="2"
                app:rowCount="4">

                <TextView
                    android:id="@+id/tv_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Player 2"
                    app:layout_columnSpan="2"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/p2_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p2_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p2_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/p2_b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–5"
                    app:layout_column="1"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/p2_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 20"
                    android:textSize="18sp"
                    app:layout_row="3" />
            </android.support.v7.widget.GridLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="2dp"
                app:columnCount="2"
                app:rowCount="4">

                <TextView
                    android:id="@+id/tv_p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 3"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/p3_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p3_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p3_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/p3_b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–5"
                    app:layout_column="1"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/p3_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 20"
                    android:textSize="18sp"
                    app:layout_row="3" />
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="2dp"
                app:columnCount="2"
                app:rowCount="4">

                <TextView
                    android:id="@+id/tv_p4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 4"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/p4_b1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p4_b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/p4_b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/p4_b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="–5"
                    app:layout_column="1"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/p4_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 20"
                    android:textSize="18sp"
                    app:layout_row="3" />
            </android.support.v7.widget.GridLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/loser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>